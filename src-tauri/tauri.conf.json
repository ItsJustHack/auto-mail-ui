{
  "build": {
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "auto-mail-forum-with-ui",
    "version": "1.0.2"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "notification": {
        "all": true
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true
      }
    },
    "windows": [
      {
        "title": "auto-mail-forum-with-ui",
        "width": 800,
        "height": 600,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.auto-mail-ui.dev",
      "resources": [
       "./config/*",
       "./email_list/*",
       "./mails/*",
       "./plaquettes/*"
      ],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/ItsJustHack/auto-mail-ui/releases/download/app-v{{current_version}}/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEUxRUIxNTlDQUJDMEY3MDYKUldRRzk4Q3JuQlhyNFZpWk1Td1FFY0o2Y3Z2S0JLUUZFQUdqYnZnc2pRVnVGSnFuQ3VpM01jN3MK"
    }
  }
}

